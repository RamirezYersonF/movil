<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appventascp3.Carritocompra"  BackgroundColor="#FDE49C">
    <ContentPage.Content>
        <StackLayout Padding="0,90,0,0">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                <Image Source="icono_appventa.png" WidthRequest="200"></Image>
                <Label Text="Carrito de compras" FontAttributes="Bold" TextColor="#876445" FontSize="40" HorizontalTextAlignment="Center"></Label>

              
                <StackLayout>
                    <Button Text="Regresar"  TextColor="White" FontAttributes="Bold" FontSize="20" Background="#CA965C" CornerRadius="8"></Button>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>