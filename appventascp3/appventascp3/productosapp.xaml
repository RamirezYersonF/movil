<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appventascp3.productosapp" Background="#FDE49C">
    <ContentPage.Content>
        <StackLayout  HorizontalOptions="Center" VerticalOptions="Center" Spacing="5" WidthRequest="350" Padding="0,10">
            <Image Source="icono_appventa.png" WidthRequest="200"></Image>
            <Label Text="Appventas" FontAttributes="Bold" TextColor="#876445" FontSize="40" HorizontalTextAlignment="Center"></Label>
            <Button Background="white" Margin="80,20"  CornerRadius="50" FontAttributes="Bold" TextColor="Black"  x:Name="perfil"  Clicked="perfil_Clicked"  Text="Datos personales"></Button>
            <FlexLayout Background="#ffff" VerticalOptions="FillAndExpand" Padding="15">
                <StackLayout Padding="5" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label x:Name="nombreproducto2" Text="Pepsi lata"  FontAttributes="Bold" TextColor="#876445" FontSize="20" HorizontalTextAlignment="Center"></Label>
                    <Image Source="pepsi.png" WidthRequest="80"></Image>
                    <Label x:Name="precio2" Text="3800" FontAttributes="Bold" TextColor="#876445" FontSize="20" HorizontalTextAlignment="Center"></Label>
                    <Entry x:Name="cantidad2"   Placeholder="cantidad" TextColor="black" PlaceholderColor="#CA965C" FontSize="20"></Entry>
                    
                    <Button x:Name="dineropagos2"  Clicked="dineropagos2_Clicked_1"   Text="add" TextColor="White" FontAttributes="Bold" FontSize="12" Background="#CA965C" CornerRadius="8" ></Button>
                </StackLayout>
                <StackLayout Padding="5" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label x:Name="nombreproducto1" Text="coca cola"  FontAttributes="Bold" TextColor="#876445" FontSize="20" HorizontalTextAlignment="Center"></Label>
                    <Image Source="coca.png" WidthRequest="80"></Image>
                    <Label x:Name="precio1" Text="5000" FontAttributes="Bold" TextColor="#876445" FontSize="20" HorizontalTextAlignment="Center"></Label>
                    <Entry x:Name="cantidad1"  Placeholder="cantidad" TextColor="black" PlaceholderColor="#CA965C" FontSize="20"></Entry>
                    
                    <Button x:Name="dineropagos1" Clicked="dineropagos1_Clicked" Text="add" TextColor="White" FontAttributes="Bold" FontSize="12" Background="#CA965C" CornerRadius="8" ></Button>
                </StackLayout>
                <StackLayout Padding="5" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label x:Name="nombreproducto3" Text="colombian"  FontAttributes="Bold" TextColor="#876445" FontSize="20" HorizontalTextAlignment="Center"></Label>
                    <Image Source="colombiana.png" WidthRequest="80"></Image>
                    <Label x:Name="precio3" Text="2500" FontAttributes="Bold" TextColor="#876445" FontSize="20" HorizontalTextAlignment="Center"></Label>
                    <Entry x:Name="cantidad3" Placeholder="cantidad" TextColor="black" PlaceholderColor="#CA965C" FontSize="20"></Entry>
                    <Button x:Name="dineropagos3" Clicked="dineropagos3_Clicked_1" Text="add" TextColor="White" FontAttributes="Bold" FontSize="12" Background="#CA965C" CornerRadius="8" ></Button>
                </StackLayout>
            </FlexLayout>
            <Button x:Name="continuarpagos"  Clicked="continuarpagos_Clicked"  Text="Continuar" FontAttributes="Bold" Background="#876445" TextColor="white" FontSize="20"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>